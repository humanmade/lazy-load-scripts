{
  "name": "humanmade/lazy-load-scripts",
  "description": "This plugin provides easy mechanism to load scripts asynchronously and on demand.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0+",
  "minimum-stability":"dev",
  "authors": [
    {
      "name": "Ivan Kristianto",
      "email": "ivan@humanmade.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "humanmade/coding-standards": "^1.1.1",
    "johnpbloch/wordpress": "dev-master"
  },
  "scripts": {
    "format": "./vendor/bin/phpcbf -p --standard=phpcs.ruleset.xml ./inc",
    "lint": "./vendor/bin/phpcs -p --standard=phpcs.ruleset.xml ./inc"
  },
  "config": {
    "allow-plugins": {
      "johnpbloch/wordpress-core-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
